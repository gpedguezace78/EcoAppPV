<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlmacenActivity">

    <Button
        android:id="@+id/btncompras3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="2dp"
        android:text="Compras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnalmacen3"
        app:layout_constraintStart_toEndOf="@+id/btnventas3" />

    <Button
        android:id="@+id/btnventas3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="16dp"
        android:text="Ventas"
        app:layout_constraintBaseline_toBaselineOf="@+id/btncompras3"
        app:layout_constraintEnd_toStartOf="@+id/btncompras3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnalmacen3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@android:color/holo_green_light"
        android:text="Almacen"
        app:layout_constraintBaseline_toBaselineOf="@+id/btncompras3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btncompras3" />
</android.support.constraint.ConstraintLayout>